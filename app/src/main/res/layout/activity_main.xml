<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_message"
        />

    <Button
        android:id="@+id/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="@string/button_message"
        />

       <CheckBox
           android:id="@+id/mycb"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="I\'m a CheckBox">
       </CheckBox>
    <!-- this one causes the program to crash
           <SwitchCompat
               android:id="@+id/mysc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="I\' a SwitchCompat">

           </SwitchCompat>
-->
       <RadioButton
           android:id="@+id/myradio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="I\'m a radio button">
       </RadioButton>


       <EditText
           android:id="@+id/myedittext"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="I\'m an Edit Text"
           />
    <ImageView
        android:id="@+id/logoalgonquin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/logoalgonquin">
    </ImageView>
    <ImageButton
        android:src="@drawable/logoalgonquin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myimagebutton"/>

</LinearLayout>
